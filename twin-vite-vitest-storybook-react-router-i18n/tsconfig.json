{
  "extends": "./tsconfig.base.json",
  "include": [
    "src",
    "hooks",
    "types",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/storybook/*": ["./.storybook/*"],
    }
  }
}
